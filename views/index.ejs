<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<title>Charts</title>
	<style>
		#chartdiv1 {
    width       : 100%;
    height      : 500px;
    font-size   : 11px;
		}
	</style>
</head>
<body>
	<script src="https://www.amcharts.com/lib/3/amcharts.js"></script>
<script src="https://www.amcharts.com/lib/3/serial.js"></script>
<script src="https://www.amcharts.com/lib/3/themes/light.js"></script>
<script src="https://www.amcharts.com/lib/3/plugins/dataloader/dataloader.min.js"></script>
<div id="chartdiv1">tushar</div>

<script>



//chart 1
AmCharts.loadFile( "http://localhost:7000/assets/csv/timeseries.csv", {}, function( response ) {

/**
 * Parse CSV
 */
var data = AmCharts.parseCSV( response, {
	"useColumnNames": true
} );

console.log(data);

/**
 * Create the chart
 */
var chart1 = AmCharts.makeChart( "chartdiv1", {
	"type": "serial",
	"theme": "light",
	"dataLoader": {
	  "async": true,
      "url": "http://localhost:7000/assets/csv/timeseries.csv",
      "format": "csv",
      "delimiter": ",",       // column separator
      "useColumnNames": true, // use first row for column names
      "skip": 1               // skip header row
    },
	"valueAxes": [ {		
		"gridColor": "#FFFFFF",
		"gridAlpha": 0.2,
		"dashLength": 0
	},
	],
	"gridAboveGraphs": true,
	"startDuration": 1,
	"graphs": [ {
		"balloonText": "[[category]]: <b>[[value]]</b>",
		"fillAlphas": 0.8,
		"lineAlpha": 0.2,
		"type": "column",
		"valueField": "visits",	
		"color": "#000000"
	},
	{
		"balloonText": "[[category]]: <b>[[value]]</b>",
		"fillAlphas": 0.8,
		"lineAlpha": 0.2,
		"type": "column",		
		"valueField": "Verbrauch (Strom) - E001002_0_000000000000000",
		"color": "#FF0000"
	}],
	"chartCursor": {
		"categoryBalloonEnabled": false,
		"cursorAlpha": 0,
		"zoomable": false
	},
	"categoryField": "Datenreihe",
	"categoryAxis": {
		"gridPosition": "start",
		"gridAlpha": 0,
		"tickPosition": "start",
		"tickLength": 20
	},
	"legend": {
    "useGraphSettings": true
  	}
} );

} );

</script>
</body>
</html>
